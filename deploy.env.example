# Worktrace deployment environment variables
# -----------------------------------------
# Copy or export these values when preparing a production deployment.

# Security
DJANGO_SECRET_KEY=change-me-in-production
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=worktrace.example.com

# Database (PostgreSQL recommended for production)
DATABASE_URL=postgres://worktrace:strong-password@postgres:5432/worktrace

# CORS / CSRF
# Comma-separated lists are supported, e.g. "https://app.example.com,https://admin.example.com"
CORS_ALLOWED_ORIGINS=https://app.example.com
CSRF_TRUSTED_ORIGINS=https://app.example.com

# Cookies & session behaviour
JWT_COOKIE_SECURE=True
REST_COOKIE_SAMESITE=None

# Time entry rules
TIMEENTRY_ALLOW_OVERLAP=False

# Media handling (typically served by the reverse proxy in production)
SERVE_MEDIA_FILES=False

# Optional: protect the /api/health endpoint (leave empty to disable)
HEALTH_CHECK_TOKEN=


